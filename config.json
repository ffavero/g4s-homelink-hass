{
  "name": "G4S homelink",
  "version": "dev",
  "slug": "g4s_homelink_hass",
  "description": "Sync G4S homelink Alarm System to HASS",
  "url": "https://github.com/ffavero/g4s-homelink-hass",
  "startup": "before",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "stdin": true,
  "hassio_api": true,
  "hassio_role": "manager",
  "homeassistant_api": true,
  "boot": "auto",
  "map": [
    "backup",
    "share"
  ],
  "services": [
    "mqtt:need"
  ],
  "options": {
    "poll_interval": 120,
    "g4s": {
      "username": "test",
      "password": "test",
      "pin": "1234"
    },
    "mqtt": {
      "host": "localhost",
      "port": 1883,
      "username": "test",
      "password": "test"
    }
  },
  "schema": {
    "poll_interval": "int",
    "risco": {
      "username": "str",
      "password": "str",
      "pin": "str"
    },
    "mqtt": {
      "host": "str",
      "port": "int?",
      "username": "str?",
      "password": "str?"
    }
  },
  "image": "francescof/{arch}-g4s-homelink-hass"
}
